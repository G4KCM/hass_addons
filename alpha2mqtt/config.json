{
    "name": "Alpha 2 MQTT",
    "version": "1.1",
    "slug": "alpha2mqtt",
    "description": "Homeassistant interface with Mohlenhoff Alpha2 thermostat",
    "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
    "startup": "application",
	"services": ["mqtt:need"],
    "boot": "auto",
    "hassio_api": true,
    "options": {
        "alpha2ips":"192.168.50.15;192.168.50.16",
        "refreshseconds":"60"
    },
    "schema": {
        "alpha2ips":"str",
        "refreshseconds":"int"
	}
}